  <!-- Page Header -->
  <header class="masthead" style="background-image: url(<%= image_url('capa.jpeg')%>)">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Esquerda Valente</h1>
            <span class="subheading">Indepêndencia, Resistência e Luta! </span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">

        <% @articles_home.each do |article|%>
        <div class="post-preview">
          <%= link_to article_path(article)do %>
            <h2 class="post-title"> <%= article.title%></h2>
            <h3 class="post-subtitle"> <%= article.subtitle%> </h3>
          <%end%>
          <p class="post-meta">Posted on <%= article.created_at%> </p>
        </div>
        <hr>
        <%end%>
        <!-- Pager -->
        <div class="clearfix">
          <%= link_to "Older Posts &rarr;".html_safe, articles_path, class: "btn btn-primary float-right"%>
        </div>

      </div>
    </div>
  </div>

  <hr>

